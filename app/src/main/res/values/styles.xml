<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="fragmentBackground">@color/fragment_bg_light</item>
        <item name="textColor">@color/black</item>
<!--        <item name="rippleEffectTheme">@drawable/ripple_effect_light</item>-->
        <item name="rippleEffect">@color/ripple_color_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="fragmentBackground">@color/black</item>
        <item name="textColor">@color/white</item>
<!--        <item name="rippleEffectTheme">@drawable/ripple_effect_dark</item>-->
        <item name="rippleEffect">@color/ripple_color_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>